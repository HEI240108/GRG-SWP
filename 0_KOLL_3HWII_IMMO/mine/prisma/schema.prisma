datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Immobilie {
    id           String    @id @default(cuid())
    adresse      String
    immoTyp      String
    quadratmeter Float
    baujahr      Float
    Verkauf      Verkauf[]
}

model Kunde {
    id      String    @id @default(cuid())
    name    String
    tel     String
    Verkauf Verkauf[]
}

model Verkauf {
    id            String    @id @default(cuid())
    Immobilie     Immobilie @relation(fields: [immobilieId], references: [id])
    Kunde         Kunde     @relation(fields: [kundeId], references: [id])
    vertrag       String
    verkaufsdatum DateTime
    verkaufspreis Float
    immobilieId   String
    kundeId       String
}
