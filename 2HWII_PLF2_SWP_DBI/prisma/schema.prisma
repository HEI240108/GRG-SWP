generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "sqlite"
    url      = "file:../fragen.sqlite"
}

model Frage {
    id        Int      @id @default(autoincrement())
    frage     String
    answers   Answer[] @relation("FrageAnswers")
    correct   Answer   @relation("FrageCorrectAnswer", fields: [correctId], references: [id])
    correctId Int
}

model Answer {
    id         Int     @id @default(autoincrement())
    answer     String
    Fragen     Frage[] @relation("FrageAnswers")
    correctFor Frage[] @relation("FrageCorrectAnswer")
}
